<!DOCTYPE html>
<html>
<head>
    <title>
        {% block title %}
            Shop
        {% endblock %}
    </title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/customer/css/main.css') }}" type="text/css" media="all" />
        <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
    {% endblock %}
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('bundles/customer/images/favicon.ico') }}" />
</head>
<body>
<div id="container">
    <div id="header">
        <div class="content">
            <h1><a href="{{ path('order_homepage') }}">
                    <img src="{{ asset('bundles/customer/images/logo.jpg') }}" alt="Order homepage" />
                    Shop
                </a></h1>
        </div>
    </div>

    <div id="content">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash_notice">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="flash_error">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="content">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <div id="footer">
        <div class="content">
            <ul>
                <li class="last"><a href="{{ path('order_homepage') }}">Orders</a></li>
            </ul>
        </div>
    </div>
</div>
</body>
</html>